<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white">
        <h3>Actualiza una tarea</h3>
        <form action="/tasks/{{task._id}}/edit" method="POST">
          <div class="mb-3">
            <input
            type="text"
            name="titulo"
            placeholder="titulo"
            value="{{task.titulo}}"
            class="form-control rounded-0 bg-dark text-white"
          />
          </div>   
          <div class="mb-3">
            <textarea
            name="descripcion"
            rows="3"
            placeholder="descripcion"
            class="form-control rounded-0 bg-dark text-white"
          >{{task.descripcion}}</textarea>
          </div>    
          <button class="btn btn-primary btn-sm mt-2">Actualizar</button>
        </form>
      </div>
    </div>
  </div>
</div>