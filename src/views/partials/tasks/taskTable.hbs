{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>NÂº</th>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th>Opciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{titulo}}</td>
          <td>{{descripcion}}</td>
          <td>
            {{#if pendiente}}
              <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">Hecho</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-success"
              >Pendiente</a>
            {{/if}}
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Editar</a>
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Eliminar</a>
          </td>

        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>NO HAY TAREAS</h1>
      <img src="/icons/empty.svg" alt="" class="w-75" />
    </div>
  </div>
{{/if}}