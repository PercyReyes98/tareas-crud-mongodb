<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>AGREGAR TAREA</h3>
  <form action="/tasks/add" method="POST">
  <div>
    <label for="titulo">Escribir un titulo:</label>
    <input type="text" name="titulo" placeholder="titulo" id="titulo"  class="form-control rounded-0 bg-dark text-white"/>
  </div>
  <div>
    <label for="descripcion">Escribir una descripcion:</label>
    <textarea
      name="descripcion"
      placeholder="descripcion"
      id="descripcion"
      class="form-control rounded-0 bg-dark text-white"
    ></textarea>
  </div>
  <button class="btn btn-primary btn-sm mt-2">Agregar</button>
</form>
</div>
